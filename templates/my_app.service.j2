[Unit]
Description={{ davical_name | upper }}
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
User={{ davical_service_user }}
Group={{ davical_service_user }}
ExecStart={{ davical_start_command }}
ExecStop={{ davical_stop_command }}
RemainAfterExit=true

[Install]
WantedBy=multi-user.target